---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import "../../../styles/pages/kitchen-remodeling.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import FAQ from "../../../components/AcordeonServices";
---

<BaseLayout
  title="Bathroom Remodeling Services"
  description="Transform your bathroom with our professional remodeling services. Modern design, high-quality materials, and customized solutions to renew your space with style and functionality."
>
  <!-- Section One -->
  <section class="hero-sectionKitchen">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>Your Dream Kitchen, Expertly Remodeled in Florida</h1>
      <p>
        Transform your space with custom designs, smart solutions, and premium
        finishes. Serving Orlando, Miami, Tampa & beyond.
      </p>
      <a href="/contact" class="cta-button"
        >Get Your Free Kitchen Remodel Estimate →</a
      >
    </div>
  </section>

  <!-- Section Two -->
  <section>
    <div class="services-grid">
      <div class="service-item">
        <i class="fas fa-utensils"></i>
        <h3>Countertop Installation</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-fire"></i>
        <h3>Stove & Oven Setup</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-sink"></i>
        <h3>Sink & Faucet Upgrade</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-box-open"></i>
        <h3>Custom Cabinetry</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-bolt"></i>
        <h3>Electrical & Lighting</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-hammer"></i>
        <h3>Full Kitchen Remodel</h3>
      </div>
    </div>
  </section>

  <!-- Section Three - Solutions Cards -->
  <section class="solutions-section">
    <h2 class="solutions-title">Tailored Kitchen Remodeling Solutions</h2>
    <div class="solutions-grid">
      <!-- Card 1 -->
      <div class="solution-card">
        <div class="card-image">
          <img
            src="/images/bathtub-replacement.jpg"
            alt="Bathtub Replacement"
          />
        </div>
        <div class="card-content">
          <h3>Custom Cabinetry & Storage</h3>
          <p>
            Elevate your kitchen's style and efficiency. Explore hardwood, MDF,
            plywood options in Shaker, Modern, Traditional, and more. Optimized
            for your unique space.
          </p>
          <a href="/contact" class="card-cta">View Cabinet Options</a>
        </div>
      </div>

      <!-- Card 2 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/vanity-storage.jpg" alt="Vanity & Storage" />
        </div>
        <div class="card-content">
          <h3>Premium Countertop Installation</h3>
          <p>
            Discover durable, beautiful surfaces. Choose from Granite, Quartz,
            Marble, or Butcher Block. Perfect for high-traffic cooking and
            entertaining.
          </p>
          <a href="/contact" class="card-cta">Explore Countertop Styles</a>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/moisture-repair.jpg" alt="Moisture Repair" />
        </div>
        <div class="card-content">
          <h3>Kitchen Island & Layout Design</h3>
          <p>
            Optimize your kitchen's flow. Integrate seating, maximize storage,
            and seamlessly blend appliances for a truly functional and inviting
            space.
          </p>
          <a href="/contact" class="card-cta">See Design Possibilities</a>
        </div>
      </div>

      <!-- Card 4 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/waterproofing.jpg" alt="Waterproofing" />
        </div>
        <div class="card-content">
          <h3>Appliance & Plumbing Integration</h3>
          <p>
            Modernize your kitchen with efficient plumbing and smart appliance
            installations. We ensure seamless functionality and code compliance
            for peace of mind. Ask us about integrating smart home technologies
            and energy-efficient solutions!
          </p>
          <a href="/contact" class="card-cta">Learn About Upgrades</a>
        </div>
      </div>
    </div>

    <!-- Section Steps -->

    <section class="steps-section">
      <h2 class="steps-title">How It Works</h2>
      <div class="steps-container">
        <!-- Step 1 -->
        <div class="step-item" data-step="1">
          <div class="step-icon">
            <i class="fas fa-phone-alt"></i>
          </div>
          <h3>Consultation</h3>
          <p>Free 3D Design Session (Virtual or On Site)</p>
        </div>

        <!-- Step 2 -->
        <div class="step-item" data-step="2">
          <div class="step-icon">
            <i class="fas fa-cube"></i>
          </div>
          <h3>Material Selection</h3>
          <p>Choose from 50+ Tile Designs & Fixtures</p>
        </div>

        <!-- Step 3 -->
        <div class="step-item" data-step="3">
          <div class="step-icon">
            <i class="fas fa-tools"></i>
          </div>
          <h3>Installation</h3>
          <p>Demolition, Process | Avg. Time: 2.5 Days</p>
        </div>

        <!-- Step 4 -->
        <div class="step-item" data-step="4">
          <div class="step-icon">
            <i class="fas fa-check"></i>
          </div>
          <h3>Final Walkthrough</h3>
          <p>Quality Check & Client Approval</p>
        </div>
      </div>
    </section>
  </section>

  <!-- Section Portfolio -->

  <section class="recent-remodels-section">
    <h2 class="recent-remodels-title">Inspiring Kitchen Transformations</h2>
    <div class="remodels-gallery">
      <!-- Remodel 1 -->
      <div class="remodel-item">
        <div class="remodel-image">
          <img src="/images/banoPortfolioOne.jpg" alt="Master Bathroom" />
        </div>
        <h3>Gourmet Chef's Kitchen – Orlando</h3>
        <p>Miami</p>
      </div>

      <!-- Remodel 2 -->
      <div class="remodel-item">
        <div class="remodel-image">
          <img src="/images/banoPortfolioTwo.jpg" alt="ADA Bathroom" />
        </div>
        <h3>Sleek Modern Kitchen – Tampa</h3>
        <p>Orlando</p>
      </div>

      <!-- Remodel 3 -->
      <div class="remodel-item">
        <div class="remodel-image">
          <img src="/images/banoPortfolioThree.jpg" alt="Small Bathroom" />
        </div>
        <h3>Cozy Family Kitchen – Miami</h3>
        <p>Tampa</p>
      </div>
    </div>

    <!-- Tags-Portfolio -->

    <div class="cnt-tagsPorfolio">
      <span class="tag-itemPorfolio">Kitchen Islands</span>
      <span class="tag-itemPorfolio">Compact Kitchens</span>
      <span class="tag-itemPorfolio">Luxury Upgrades</span>
      <span class="tag-itemPorfolio">Sustainable Designs</span>
      <span class="tag-itemPorfolio">Smart Tech Integration</span>
      <span class="tag-itemPorfolio">Modern kitchen Design</span>
    </div>
  </section>

  <!-- Blog Ba;os -->

  <section class="sectionBlogBathroom">
    <div>
      <div>
        <h2 class="tittleSection-cardBlogBathroo">
          Bathroom Remodeling Guides
        </h2>
      </div>
      <div>
        <div class="cntFather-cardBlogBathroo">
          <div class="cnt-cardBlogBathroom">
            <h3 class="title-cardBlogBathroom">Este es el Titulo de la card</h3>
            <p class="text-cardBlogBathroom">
              Esta es la description para invitar a ver los blos sobre las cosas
              de ba;o
            </p>
            <a class="link-blogBathroom"
              >Leer Más <i class="flechaBlog fas fa-arrow-right"></i></a
            >
          </div>
          <div class="cnt-cardBlogBathroom">
            <h3 class="title-cardBlogBathroom">Este es el Titulo de la card</h3>
            <p class="text-cardBlogBathroom">
              Esta es la description para invitar a ver los blos sobre las cosas
              de ba;o
            </p>
            <a class="link-blogBathroom"
              >Leer Más <i class="flechaBlog fas fa-arrow-right"></i></a
            >
          </div>
        </div>
      </div>
    </div>
  </section>
      <section>
      <FAQ
        client:load
        category="kitchen"
        title="FAQs"
      />
    </section>
</BaseLayout>
