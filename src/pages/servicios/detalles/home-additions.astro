---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import "../../../styles/pages/home-additions.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import FAQ from "../../../components/AcordeonServices";
---

<BaseLayout
  title="Bathroom Remodeling Services"
  description="Transform your bathroom with our professional remodeling services. Modern design, high-quality materials, and customized solutions to renew your space with style and functionality."
>
  <!-- Section One -->
  <section class="hero-sectionHomeAdditions">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>Home Additions in Florida: Expand Your Living Space</h1>
      <p>
        Seamlessly integrate new rooms, second stories, or expanded areas.
        Custom designs for your growing needs in Orlando, Miami, Tampa & beyond.
      </p>
      <a href="/contact" class="cta-button"
        >Get Your Free Home Addition Estimate →</a
      >
    </div>
  </section>

  <!-- Section Two -->
  <section>
    <div class="services-grid">
      <div class="service-item">
        <i class="fas fa-home"></i>
        <h3>Room Additions</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-door-open"></i>
        <h3>Sunrooms & Enclosures</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-stairs"></i>
        <h3>Second-Story Expansions</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-car"></i>
        <h3>Garage Conversions</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-vector-square"></i>
        <h3>Floor Plan Redesign</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-expand"></i>
        <h3>Whole-House Expansion</h3>
      </div>
    </div>
  </section>

  <!-- Section Three - Solutions Cards -->
  <section class="solutions-section">
    <h2 class="solutions-title">Custom Home Addition Solutions</h2>
    <div class="solutions-grid">

      <!-- Card 1 -->
      <div class="solution-card">
        <div class="card-image">
          <img
            src="/images/homeAddSolutionsOne.jpg"
            alt="homeAddSolutionsOne"
          />
        </div>
        <div class="card-content">
          <h3>Room Additions</h3>
          <p>Add new bedrooms, living areas, or specialized rooms. Designed to blend seamlessly with your existing home's architecture and style.</p>
          <a href="/contact" class="card-cta">View Room Addition Examples</a>
        </div>
      </div>

      <!-- Card 2 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/homeAddSolutionsTwo.jpg" alt="homeAddSolutionsTwo" />
        </div>
        <div class="card-content">
          <h3>Second Story Additions</h3>
          <p>Maximize your property's footprint by adding a new level. Ideal for growing families or enhancing views. Expert structural planning.</p>
          <a href="/contact" class="card-cta">Explore Second Story Projects</a>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/homeAddSolutionsThree.jpg" alt="homeAddSolutionsThree" />
        </div>
        <div class="card-content">
          <h3>Sunrooms & Outdoor Living</h3>
          <p>Bring the outdoors in with custom sunrooms, screened enclosures, or expansive patio additions. Perfect for enjoying Florida's climate.</p>
          <a href="/contact" class="card-cta">See Outdoor Living Designs</a>
        </div>
      </div>

      <!-- Card 4 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/homeAddSolutionsFour.jpg" alt="homeAddSolutionsFour" />
        </div>
        <div class="card-content">
          <h3>Master Suites & In-Law Suites</h3>
          <p>Create private retreats or comfortable guest accommodations. Includes custom bathrooms, walk-in closets, and independent living areas. Ask us about smart home integrations</p>
          <a href="/contact" class="card-cta">View Details</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Steps -->

  <section class="steps-section">
    <h2 class="steps-title">How It Works</h2>
    <div class="steps-container">
      <!-- Step 1 -->
      <div class="step-item" data-step="1">
        <div class="step-icon">
          <i class="fas fa-phone-alt"></i>
        </div>
        <h3>Consultation</h3>
        <p>Free 3D Design Session (Virtual or On Site)</p>
      </div>

      <!-- Step 2 -->
      <div class="step-item" data-step="2">
        <div class="step-icon">
          <i class="fas fa-cube"></i>
        </div>
        <h3>Material Selection</h3>
        <p>Choose from 50+ Tile Designs & Fixtures</p>
      </div>

      <!-- Step 3 -->
      <div class="step-item" data-step="3">
        <div class="step-icon">
          <i class="fas fa-tools"></i>
        </div>
        <h3>Installation</h3>
        <p>Demolition, Process | Avg. Time: 2.5 Days</p>
      </div>

      <!-- Step 4 -->
      <div class="step-item" data-step="4">
        <div class="step-icon">
          <i class="fas fa-check"></i>
        </div>
        <h3>Final Walkthrough</h3>
        <p>Quality Check & Client Approval</p>
      </div>
    </div>
  </section>

  <!-- Section Portfolio -->

  <section class="recent-remodels-section">
    <h2 class="recent-remodels-title">Recent Bathroom Remodels</h2>
    <div class="remodels-gallery">
      <!-- Remodel 1 -->
      <div class="remodel-item">
        <div class="remodel-image">
          <img src="/images/banoPortfolioOne.jpg" alt="Master Bathroom" />
        </div>
        <h3>Master Bathroom</h3>
        <p>Miami</p>
      </div>

      <!-- Remodel 2 -->
      <div class="remodel-item">
        <div class="remodel-image">
          <img src="/images/banoPortfolioTwo.jpg" alt="ADA Bathroom" />
        </div>
        <h3>ADA Bathroom</h3>
        <p>Orlando</p>
      </div>

      <!-- Remodel 3 -->
      <div class="remodel-item">
        <div class="remodel-image">
          <img src="/images/banoPortfolioThree.jpg" alt="Small Bathroom" />
        </div>
        <h3>Small Bathroom</h3>
        <p>Tampa</p>
      </div>
    </div>

    <!-- Tags-Portfolio -->

    <div class="cnt-tagsPorfolio">
      <span class="tag-itemPorfolio">Room Expansions</span>
      <span class="tag-itemPorfolio">Multi-Story Projects</span>
      <span class="tag-itemPorfolio">Outdoor Structures</span>
      <span class="tag-itemPorfolio">Smart Home Integration</span>
      <span class="tag-itemPorfolio">Energy Efficient Additions</span>
    </div>
  </section>

  <!-- Blog Ba;os -->

  <section class="sectionBlogBathroom">
    <div>
      <div>
        <h2 class="tittleSection-cardBlogBathroo">
          Bathroom Remodeling Guides
        </h2>
      </div>
      <div>
        <div class="cntFather-cardBlogBathroo">
          <div class="cnt-cardBlogBathroom">
            <h3 class="title-cardBlogBathroom">Este es el Titulo de la card</h3>
            <p class="text-cardBlogBathroom">
              Esta es la description para invitar a ver los blos sobre las cosas
              de ba;o
            </p>
            <a class="link-blogBathroom"
              >Leer Más <i class="flechaBlog fas fa-arrow-right"></i></a
            >
          </div>
          <div class="cnt-cardBlogBathroom">
            <h3 class="title-cardBlogBathroom">Este es el Titulo de la card</h3>
            <p class="text-cardBlogBathroom">
              Esta es la description para invitar a ver los blos sobre las cosas
              de ba;o
            </p>
            <a class="link-blogBathroom"
              >Leer Más <i class="flechaBlog fas fa-arrow-right"></i></a
            >
          </div>
        </div>
      </div>
    </div>
  </section>
  <section>
    <FAQ client:load category="home-additions" title="FAQs" />
  </section>
</BaseLayout>
