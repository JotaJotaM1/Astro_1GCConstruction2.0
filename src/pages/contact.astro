---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ContactForm.jsx";
import "@fortawesome/fontawesome-free/css/all.min.css";
---

<BaseLayout
  title="Contacto - Mi Sitio Web"
  description="Ponte en contacto con nosotros. Estamos aquí para ayudarte con tu proyecto digital. Consulta gratuita disponible."
>
  <!-- Hero Section -->
  <section class="contact-hero">
    <div class="containerHeroContact">
      <div class="hero-content">
        <h1>Let's Talk About Your Project</h1>
        <p class="hero-description">
          Have an idea to remodel your kitchen, bathroom, or any other space?
          Tell us what you have in mind. We're ready to provide expert advice
          and prepare a tailored quote for you.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Content Section -->
  <section class="section">
    <div class="container">
      <div class="contact-layout">
        <!-- Contact Form -->
        <div class="contact-form-section">
          <div class="form-header">
            <h2>Envíanos un mensaje</h2>
            <p>
              Completa el formulario y te responderemos en menos de 24 horas.
            </p>
          </div>
          <ContactForm client:load />
        </div>

        <!-- Contact Info -->
        <div class="contact-info-section">
          <div class="info-card">
            <h3>Información de contacto</h3>

            <!-- Email -->
            <div class="contact-item">
              <div class="contact-icon">
                <i class="fas fa-envelope"></i>
              </div>
              <div class="contact-details">
                <h4>Email</h4>
                <a href="mailto:info@misitio.com">info@misitio.com</a>
                <a href="mailto:contacto@misitio.com">contacto@misitio.com</a>
              </div>
            </div>

            <!-- Teléfono -->
            <div class="contact-item">
              <div class="contact-icon">
                <i class="fas fa-phone-alt"></i>
              </div>
              <div class="contact-details">
                <h4>Teléfono</h4>
                <a href="tel:+1234567890">+1 (234) 567-890</a>
                <a href="tel:+0987654321">+0 (987) 654-321</a>
              </div>
            </div>

            <!-- Dirección -->
            <div class="contact-item">
              <div class="contact-icon">
                <i class="fas fa-map-marker-alt"></i>
              </div>
              <div class="contact-details">
                <h4>Dirección</h4>
                <p>
                  123 Calle Principal<br />
                  Ciudad, Estado 12345<br />
                  País
                </p>
              </div>
            </div>

            <!-- Horario de atención -->
            <div class="contact-item">
              <div class="contact-icon">
                <i class="fas fa-clock"></i>
              </div>
              <div class="contact-details">
                <h4>Horario de atención</h4>
                <p>
                  Lunes - Viernes: 9:00 AM - 6:00 PM<br />
                  Sábados: 10:00 AM - 2:00 PM<br />
                  Domingos: Cerrado
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section">
    <div class="container">
      <div class="cta-content">
        <h2>¿Listo para comenzar tu proyecto?</h2>
        <p>
          No esperes más. Contáctanos hoy mismo y da el primer paso hacia el
          éxito digital de tu negocio.
        </p>
        <div class="cta-buttons">
          <a href="#contact-form" class="btn">Enviar mensaje</a>
          <a href="tel:+1234567890" class="btn btn-secondary">Llamar ahora</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    padding: 3rem 0;
    text-align: center;
    color: #ffffff;
    background-image: url("/images/heroContact.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .contact-hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 1;
  }
  .contact-hero .hero-content {
    position: relative;
    z-index: 2;
  }

  .hero-content h1 {
    font-size: 3.2rem;
    margin-bottom: var(--spacing-6);
    color: white;
    font-weight: 700;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .hero-description {
    font-size: var(--font-size-lg);
    max-width: 600px;
    margin: 0 auto;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    padding: 0 20px;
  }

  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--spacing-12);
    align-items: start;
  }

  .contact-form-section {
    background: white;
    padding: var(--spacing-8);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-lg);
  }

  .form-header {
    margin-bottom: var(--spacing-8);
  }

  .form-header h2 {
    color: var(--text-primary);
    margin-bottom: var(--spacing-3);
  }

  .form-header p {
    color: var(--text-secondary);
    margin: 0;
  }

  .contact-info-section {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-6);
  }

  .info-card,
  .social-card {
    background: white;
    padding: var(--spacing-6);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow);
  }

  .info-card h3,
  .social-card h3 {
    color: var(--text-primary);
    margin-bottom: var(--spacing-6);
    font-size: var(--font-size-xl);
  }

  .contact-item {
    display: flex;
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-6);
    padding-bottom: var(--spacing-6);
    border-bottom: 1px solid #e2e8f0;
  }

  .contact-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }

  .contact-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact-details h4 {
    color: var(--text-primary);
    margin-bottom: var(--spacing-2);
    font-size: var(--font-size-lg);
  }

  .contact-details a {
    color: var(--color-primary);
    text-decoration: none;
    display: block;
    margin-bottom: var(--spacing-1);
  }

  .contact-details a:hover {
    text-decoration: underline;
  }

  .contact-details p {
    color: var(--text-secondary);
    line-height: 1.5;
    margin: 0;
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    padding: var(--spacing-3);
    border-radius: var(--border-radius);
    text-decoration: none;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  .social-link.facebook {
    color: #1877f2;
    background: rgba(24, 119, 242, 0.1);
  }

  .social-link.twitter {
    color: #1da1f2;
    background: rgba(29, 161, 242, 0.1);
  }

  .social-link.linkedin {
    color: #0077b5;
    background: rgba(0, 119, 181, 0.1);
  }

  .social-link.instagram {
    color: #e4405f;
    background: rgba(228, 64, 95, 0.1);
  }

  .social-link:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow);
  }

  .section-title {
    text-align: center;
    font-size: var(--font-size-2xl);
    margin-bottom: var(--spacing-8);
    color: var(--text-primary);
  }

  .map-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .map-placeholder {
    background: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow);
    overflow: hidden;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .map-content {
    text-align: center;
    padding: var(--spacing-8);
  }

  .map-content svg {
    color: var(--color-primary);
    margin-bottom: var(--spacing-4);
  }

  .map-content h3 {
    color: var(--text-primary);
    margin-bottom: var(--spacing-3);
  }

  .map-content p {
    color: var(--text-secondary);
    margin-bottom: var(--spacing-6);
  }

  .faq-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    background: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow);
    margin-bottom: var(--spacing-4);
    overflow: hidden;
  }

  .faq-question {
    width: 100%;
    padding: var(--spacing-6);
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--font-size-lg);
    font-weight: 500;
    color: var(--text-primary);
    transition: background-color 0.2s ease;
  }

  .faq-question:hover {
    background: var(--bg-secondary);
  }

  .faq-question.active {
    background: var(--bg-secondary);
  }

  .faq-icon {
    transition: transform 0.2s ease;
    color: var(--color-primary);
  }

  .faq-question.active .faq-icon {
    transform: rotate(180deg);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .faq-answer.active {
    max-height: 200px;
  }

  .faq-answer p {
    padding: 0 var(--spacing-6) var(--spacing-6);
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .cta-content {
    text-align: center;
    background: var(--bg-secondary);
    padding: var(--spacing-12);
    border-radius: var(--border-radius-lg);
  }

  .cta-content h2 {
    margin-bottom: var(--spacing-4);
  }

  .cta-content p {
    margin-bottom: var(--spacing-6);
    font-size: var(--font-size-lg);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero-description p {
      font-size: 1rem;
    }
    .contact-hero {
      min-height: 50vh;
      max-height: 80vh;
    }
    .contact-form-section {
      padding: var(--spacing-6);
    }

    .contact-info-section {
      grid-template-columns: 1fr;
    }

    .contact-item {
      flex-direction: column;
      text-align: center;
    }

    .contact-icon {
      align-self: center;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 1024px) {
    .contact-layout {
      grid-template-columns: 1fr;
      gap: var(--spacing-8);
    }

    .contact-info-section {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--spacing-6);
    }
    .contact-hero {
      padding: 10rem 0;
    }
  }

  @media (max-width: 1440px) {
    .contact-hero {
      padding: 14rem 0;
    }
  }
    @media (max-width: 2560px) {
    .contact-hero {
      padding: 12rem 0;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // FAQ functionality
    const faqQuestions = document.querySelectorAll(".faq-question");

    faqQuestions.forEach((question) => {
      question.addEventListener("click", () => {
        const faqId = (question as HTMLElement).dataset.faq;
        const answer = document.getElementById(faqId || "");

        // Close all other FAQs
        faqQuestions.forEach((otherQuestion) => {
          if (otherQuestion !== question) {
            otherQuestion.classList.remove("active");
            const otherId = (otherQuestion as HTMLElement).dataset.faq;
            const otherAnswer = document.getElementById(otherId || "");
            otherAnswer?.classList.remove("active");
          }
        });

        // Toggle current FAQ
        question.classList.toggle("active");
        answer?.classList.toggle("active");
      });
    });

    // Smooth scroll to contact form
    const contactFormLink = document.querySelector('a[href="#contact-form"]');
    if (contactFormLink) {
      contactFormLink.addEventListener("click", (e: Event) => {
        e.preventDefault();
        const formSection = document.querySelector(".contact-form-section");
        if (formSection) {
          formSection.scrollIntoView({
            behavior: "smooth",
            block: "start",
          });
        }
      });
    }
  });
</script>
