---
// src/pages/servicios/[servicio]/[ciudad].astro
import BaseLayout from "../../../layouts/BaseLayout.astro";
import {
  getAllCombinations,
  getServicioData,
  getCiudadData,
} from "../../../data/services.js";

export async function getStaticPaths() {
  const combinations = getAllCombinations();

  return combinations.map(({ servicio, ciudad, servicioData, ciudadData }) => ({
    params: {
      servicio,
      ciudad,
    },
    props: {
      servicioData,
      ciudadData,
    },
  }));
}

const { servicio, ciudad } = Astro.params;
const { servicioData, ciudadData } = Astro.props;

// Generar contenido din√°mico
const pageTitle = `${servicioData.nombre} in ${ciudadData.nombre} | 1GC Construction`;
const pageDescription = `Fast, affordable, and code-compliant ${servicioData.nombre.toLowerCase()} services in ${ciudadData.nombre}, ${ciudadData.region}. Licensed contractors with satisfaction guarantee.`;

// Contenido din√°mico
const heroContent = {
  title: `${servicioData.nombre} in ${ciudadData.nombre}`,
  subtitle: `Fast, affordable, and code-compliant ${servicioData.nombre.toLowerCase()} services in ${ciudadData.nombre}.`,
  ctaText: `Get a Free Quote in ${ciudadData.nombre}`,
};

// Servicios relacionados para mostrar como badges
const allServices = [
  { name: "Bathroom Remodeling", icon: "üõÅ" },
  { name: "Kitchen Remodeling", icon: "üç≥" },
  { name: "Exterior Construction", icon: "üè°" },
  { name: "Living & Dining", icon: "üõãÔ∏è" },
  { name: "Bedroom Remodeling", icon: "üõèÔ∏è" },
  { name: "Office Construction", icon: "üíº" },
];

// Ciudades cercanas para el √°rea de servicio
const serviceAreaCities = [
  "Weston",
  "Pembroke Pines",
  "Coral Gables",
  "Aventura",
  "Doral",
  "Kendall",
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="hero-content">
        <!-- Service badges -->
        <div class="service-badges">
          {
            allServices.map((service) => (
              <span
                class="service-badge"
                class:list={[
                  service.name.replace(" ", "").toLowerCase() ===
                    servicioData.nombre.replace(" ", "").toLowerCase() &&
                    "active",
                ]}
              >
                <span class="badge-icon">{service.icon}</span>
                <span class="badge-text">{service.name}</span>
              </span>
            ))
          }
        </div>

        <!-- Main heading -->
        <h1 class="hero-title">
          Professional {servicioData.nombre}<br />
          in {ciudadData.nombre}
        </h1>

        <!-- Hero subtitle -->
        <p class="hero-subtitle">
          {heroContent.subtitle}
        </p>

        <!-- CTA Button -->
        <div class="hero-cta">
          <a href="/contacto" class="btn-primary">
            {heroContent.ctaText} ‚Üí
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Overview Section -->
  <section class="section service-overview">
    <div class="container">
      <div class="overview-grid">
        <div class="overview-content">
          <h2>Complete {servicioData.nombre} Services You Can Trust</h2>
          <p class="overview-text">
            We deliver full-service {servicioData.nombre.toLowerCase()} in {
              ciudadData.nombre
            } with expert contractors, clean installations, and results you can rely
            on.
          </p>

          <ul class="service-features">
            <li>
              <span class="feature-icon">‚úì</span>
              On-site consultation & custom planning
            </li>
            <li>
              <span class="feature-icon">‚úì</span>
              Code-compliant materials & installation
            </li>
            <li>
              <span class="feature-icon">‚úì</span>
              Fast timelines and real-time updates
            </li>
            <li>
              <span class="feature-icon">‚úì</span>
              Satisfaction guarantee on every job
            </li>
          </ul>
        </div>

        <div class="overview-sidebar">
          <h3>Serving {ciudadData.nombre} and All of {ciudadData.region}</h3>
          <p>
            We offer {servicioData.nombre.toLowerCase()} in {ciudadData.nombre} and
            throughout {ciudadData.region}, including neighborhoods like {
              serviceAreaCities.slice(0, 3).join(", ")
            }, and {serviceAreaCities[3]}.
          </p>
          <a href="/contacto" class="btn-outline">
            Check Availability in Your Neighborhood ‚Üí
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Visual Gallery Section -->
  <section class="section gallery-section">
    <div class="container">
      <h2 class="section-title">
        See Our {servicioData.nombre} Projects Across Florida
      </h2>
      <p class="section-subtitle">
        We offer {servicioData.nombre.toLowerCase()} in {ciudadData.nombre} and throughout
        {ciudadData.region}, including neighborhoods like {
          serviceAreaCities.slice(0, 2).join(" and ")
        }.
      </p>

      <div class="gallery-grid">
        <a href="/portfolio" class="gallery-card-link">
          <div class="gallery-item">
            <img
              src="/images/BanoAntesDespues.jpeg"
              alt="Bathroom Remodeling Before and After"
              class="gallery-image"
            />
            <div class="gallery-overlay">
              <h4>Bathroom Transformation</h4>
              <p>Luxury finishes and modern fixtures</p>
            </div>
          </div>
        </a>

        <a href="/portfolio" class="gallery-card-link">
          <div class="gallery-item">
            <img
              src="/images/concinaAntesDespues.jpeg"
              alt="Kitchen Renovation"
              class="gallery-image"
            />
            <div class="gallery-overlay">
              <h4>Kitchen Upgrade</h4>
              <p>Modern design with custom cabinets</p>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- FAQs Section -->
  <section class="section faq-section">
    <div class="container">
      <h2 class="section-title">
        FAQs About {servicioData.nombre} in {ciudadData.nombre}
      </h2>

      <div class="faq-grid">
        <div class="faq-item">
          <h3 class="faq-question">
            Do I need a permit for {servicioData.nombre.toLowerCase()} in {
              ciudadData.nombre
            }?
          </h3>
          <p class="faq-answer">
            Yes, but we handle all permits and city documentation for you. Our
            team is familiar with
            {ciudadData.county} requirements and ensures full compliance.
          </p>
        </div>

        <div class="faq-item">
          <h3 class="faq-question">
            How long does a typical {servicioData.nombre.toLowerCase()} project take?
          </h3>
          <p class="faq-answer">
            Most {servicioData.nombre.toLowerCase()} projects in {
              ciudadData.nombre
            } are completed within 5‚Äì10 business days, depending on the scope and
            complexity.
          </p>
        </div>

        <div class="faq-item">
          <h3 class="faq-question">
            What areas of {ciudadData.nombre} do you serve?
          </h3>
          <p class="faq-answer">
            We serve all of {ciudadData.nombre} and surrounding areas in {
              ciudadData.region
            }, including
            {serviceAreaCities.slice(0, 4).join(", ")}, and more.
          </p>
        </div>

        <div class="faq-item">
          <h3 class="faq-question">
            Do you offer warranties on your {servicioData.nombre.toLowerCase()}?
          </h3>
          <p class="faq-answer">
            Yes, all our {servicioData.nombre.toLowerCase()} work comes with comprehensive
            warranties covering both materials and labor for your peace of mind.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero-section {
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(
        135deg,
        rgba(12, 78, 110, 0.4) 0%,
        rgba(3, 23, 79, 0.5) 100%
      ),
      url("/images/backgroundTemplateSeo.jpg");
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    padding: var(--spacing-16) 0 6rem;
    color: white;
    position: relative;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(12, 78, 110, 0.2) 0%,
      rgba(3, 23, 79, 0.3) 100%
    );
    z-index: 1;
  }

  .hero-section .container {
    position: relative;
    z-index: 2;
  }

  .hero-content {
    max-width: 800px;
    text-align: center;
  }

  .service-badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-2);
    margin-bottom: var(--spacing-8);
  }

  .service-badge {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2) var(--spacing-4);
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 50px;
    font-size: var(--font-size-sm);
    color: white;
    transition: all 0.3s ease;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
  }

  .service-badge.active {
    background: rgba(245, 158, 11, 0.8);
    color: white;
    border-color: var(--color-accent);
    box-shadow: 0 4px 15px rgba(245, 158, 11, 0.4);
  }

  .service-badge:hover {
    background: rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }

  .badge-icon {
    font-size: var(--font-size-base);
  }

  .hero-title {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    color: white;
    margin-bottom: var(--spacing-6);
    line-height: 1.1;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: var(--spacing-8);
    line-height: 1.6;
    text-shadow: 1px 1px 6px rgba(0, 0, 0, 0.6);
  }

  .hero-cta {
    margin-top: var(--spacing-8);
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    padding: var(--spacing-4) var(--spacing-8);
    background: var(--color-accent);
    color: white;
    text-decoration: none;
    border-radius: var(--border-radius-lg);
    font-weight: 600;
    font-size: var(--font-size-lg);
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
    text-shadow: none;
  }

  .btn-primary:hover {
    background: #d97706;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(245, 158, 11, 0.4);
  }

  .btn-large {
    padding: var(--spacing-6) 2.5rem;
    font-size: var(--font-size-xl);
  }

  .btn-outline {
    display: inline-flex;
    align-items: center;
    padding: var(--spacing-3) var(--spacing-6);
    background: transparent;
    color: var(--color-primary);
    text-decoration: none;
    border: 2px solid var(--color-primary);
    border-radius: var(--border-radius-lg);
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-outline:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  /* Section Styling - usando variables globales */
  .section-title {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-4);
    text-align: center;
  }

  .section-subtitle {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    text-align: center;
    margin-bottom: var(--spacing-12);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Service Overview */
  .service-overview {
    background: var(--bg-primary);
  }

  .overview-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--spacing-16);
    align-items: start;
  }

  .overview-content h2 {
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-6);
  }

  .overview-text {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: var(--spacing-8);
  }

  .service-features {
    list-style: none;
    padding: 0;
  }

  .service-features li {
    display: flex;
    align-items: center;
    gap: var(--spacing-4);
    padding: var(--spacing-3) 0;
    font-size: var(--font-size-lg);
    color: var(--text-primary);
  }

  .feature-icon {
    width: 24px;
    height: 24px;
    background: var(--color-accent);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: var(--font-size-sm);
    flex-shrink: 0;
  }

  .overview-sidebar {
    background: var(--bg-secondary);
    padding: var(--spacing-8);
    border-radius: var(--border-radius-lg);
    border: 1px solid #e2e8f0;
  }

  .overview-sidebar h3 {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--spacing-4);
  }

  .overview-sidebar p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-6);
  }

  /* Gallery Section */
  .gallery-section {
    background: var(--bg-secondary);
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-8);
  }

  .gallery-item {
    position: relative;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    transition: transform 0.3s ease;
  }

  .gallery-item:hover {
    transform: translateY(-5px);
  }

  .gallery-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .gallery-image {
    transform: scale(1.05);
  }

  .gallery-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    color: white;
    padding: var(--spacing-8);
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .gallery-overlay {
    transform: translateY(0);
  }

  .gallery-overlay h4 {
    font-size: var(--font-size-xl);
    font-weight: 600;
    margin-bottom: var(--spacing-2);
  }

  /* FAQ Section */
  .faq-section {
    background: var(--bg-primary);
  }

  .faq-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-8);
  }

  .faq-item {
    background: var(--bg-secondary);
    padding: var(--spacing-8);
    border-radius: var(--border-radius-lg);
    border: 1px solid #e2e8f0;
  }

  .faq-question {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--spacing-4);
  }

  .faq-answer {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-title {
      font-size: var(--font-size-3xl);
    }

    .service-badges {
      justify-content: flex-start;
    }

    .overview-grid,
    .gallery-grid,
    .faq-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: var(--font-size-2xl);
    }

    .hero-section {
      padding: var(--spacing-8) 0 var(--spacing-12);
    }
  }
</style>
