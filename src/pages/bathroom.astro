---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/pages/bathroom.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
---

<BaseLayout
  title="Bathroom Remodeling Services"
  description="Transform your bathroom with our professional remodeling services. Modern design, high-quality materials, and customized solutions to renew your space with style and functionality."
>
  <!-- Section One -->
  <section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>Transform Your Bathroom Into Your Personal Oasis</h1>
      <p>
        Professional remodeling services with modern designs, premium materials,
        and expert craftsmanship to create the bathroom of your dreams.
      </p>
      <a href="/contact" class="cta-button">Get Your Free Quote</a>
    </div>
  </section>

  <!-- Section Two -->
  <section>
    <div class="services-grid">
      <div class="service-item">
        <i class="fas fa-bath"></i>
        <h3>Bathtub Replacement</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-shower"></i>
        <h3>Walk-in Showers</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-sink"></i>
        <h3>Vanity & Storage</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-tint"></i>
        <h3>Waterproofing</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-fan"></i>
        <h3>Ventilation Upgrade</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-hammer"></i>
        <h3>Full Remodel</h3>
      </div>
    </div>
  </section>

  <!-- Section Three - Solutions Cards -->
  <section class="solutions-section">
    <h2 class="solutions-title">Bathroom Remodeling Solutions</h2>
    <div class="solutions-grid">
      <!-- Card 1 -->
      <div class="solution-card">
        <div class="card-image">
          <img
            src="/images/bathtub-replacement.jpg"
            alt="Bathtub Replacement"
          />
        </div>
        <div class="card-content">
          <h3>Bathtub Replacement</h3>
          <p>Materials: Reinforced acrylic + demolition</p>
          <a href="/contact" class="card-cta">View Details</a>
        </div>
      </div>

      <!-- Card 2 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/vanity-storage.jpg" alt="Vanity & Storage" />
        </div>
        <div class="card-content">
          <h3>Vanity & Storage</h3>
          <p>Designs: Tempered glass + new LED lighting</p>
          <a href="/contact" class="card-cta">View Details</a>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/moisture-repair.jpg" alt="Moisture Repair" />
        </div>
        <div class="card-content">
          <h3>Moisture Repair</h3>
          <p>Moisture-resistant materials</p>
          <a href="/contact" class="card-cta">View Details</a>
        </div>
      </div>

      <!-- Card 4 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/waterproofing.jpg" alt="Waterproofing" />
        </div>
        <div class="card-content">
          <h3>Waterproofing</h3>
          <p>Complete waterproofing system</p>
          <a href="/contact" class="card-cta">View Details</a>
        </div>
      </div>
    </div>

    <!-- Section Steps -->

    <section class="steps-section">
      <h2 class="steps-title">How It Works</h2>
      <div class="steps-container">
        <!-- Step 1 -->
        <div class="step-item" data-step="1">
          <div class="step-icon">
            <i class="fas fa-phone-alt"></i>
          </div>
          <h3>Consultation</h3>
          <p>Free 3D Design Session (Virtual or On Site)</p>
        </div>

        <!-- Step 2 -->
        <div class="step-item" data-step="2">
          <div class="step-icon">
            <i class="fas fa-cube"></i>
          </div>
          <h3>Material Selection</h3>
          <p>Choose from 50+ Tile Designs & Fixtures</p>
        </div>

        <!-- Step 3 -->
        <div class="step-item" data-step="3">
          <div class="step-icon">
            <i class="fas fa-tools"></i>
          </div>
          <h3>Installation</h3>
          <p>Demolition, Process | Avg. Time: 2.5 Days</p>
        </div>

        <!-- Step 4 -->
        <div class="step-item" data-step="4">
          <div class="step-icon">
            <i class="fas fa-check"></i>
          </div>
          <h3>Final Walkthrough</h3>
          <p>Quality Check & Client Approval</p>
        </div>
      </div>
    </section>
  </section>
</BaseLayout>
