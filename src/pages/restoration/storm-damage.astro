---
import BaseLayout from "../../layouts/BaseLayout.astro";
import "../../styles/pages/storm-damage.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import FAQ from "../../components/AcordeonServices";
---

<BaseLayout
    title="Storm Damage Repair & Restoration | 1GC Construction"
    description="Emergency tarping & board-up, debris removal, water mitigation, and full repairs. Serving Orlando, Miami, Tampa & beyond."
>
    <!-- Hero -->
    <section class="hero-sectionKitchen">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <h1>Storm Damage? We Secure, Repair & Restore</h1>
            <p>
                Emergency tarping and board-up, debris removal, and water
                mitigation to protect your home fast. Serving Orlando, Miami,
                Tampa & beyond.
            </p>
            <a href="/contact" class="cta-button">Get Storm Help Now â†’</a>
        </div>
    </section>

    <!-- Service Icons -->
    <section>
        <div class="services-grid">
            <div class="service-item">
                <i class="fas fa-wind"></i>
                <h3>Wind Damage</h3>
            </div>

            <div class="service-item">
                <i class="fas fa-cloud-showers-heavy"></i>
                <h3>Hurricane Damage</h3>
            </div>

            <div class="service-item">
                <i class="fas fa-tree"></i>
                <h3>Storm Debris Removal</h3>
            </div>

            <div class="service-item">
                <i class="fas fa-tools"></i>
                <h3>Emergency Storm Repair</h3>
            </div>
        </div>
    </section>

    <!-- Solutions Cards -->
    <section class="solutions-section">
        <h2 class="solutions-title">Comprehensive Storm Damage Solutions</h2>
        <div class="solutions-grid">
            <!-- Card 1 -->

                        <div class="solution-card">
                <div class="card-image">
                    <img
                        src="/images/HurricaneDamage.jpg"
                        alt="Home impacted by hurricane rain and wind"
                    />
                </div>
                <div class="card-content">
                    <h3>Hurricane Damage</h3>
                    <p>
                        Full-service response for hurricane impact:
                        stabilization, water mitigation, and structural repairs.
                    </p>
                    <a href="/contact" class="card-cta">Hurricane Recovery</a>
                </div>
            </div>
        
            <!-- Card 2 -->

            <div class="solution-card">
                <div class="card-image">
                    <img
                        src="/images/WindDamage.jpg"
                        alt="Shingles and siding damaged by strong winds"
                    />
                </div>
                <div class="card-content">
                    <h3>Wind Damage</h3>
                    <p>
                        Repair missing shingles, damaged siding, and broken
                        windows to restore weather protection.
                    </p>
                    <a href="/contact" class="card-cta">Fix Wind Damage</a>
                </div>
            </div>


            <!-- Card 3 -->
            <div class="solution-card">
                <div class="card-image">
                    <img
                        src="/images/StormDebrisRemoval.jpg"
                        alt="Crew removing fallen branches and exterior debris"
                    />
                </div>
                <div class="card-content">
                    <h3>Storm Debris Removal</h3>
                    <p>
                        Safe removal of fallen trees, branches, and exterior
                        debris to clear access and prevent hazards.
                    </p>
                    <a href="/contact" class="card-cta"
                        >Schedule Debris Pickup</a
                    >
                </div>
            </div>

            <!-- Card 5 -->
            <div class="solution-card">
                <div class="card-image">
                    <img
                        src="/images/EmergencyStormRepair.jpg"
                        alt="Team performing urgent exterior repairs after a storm"
                    />
                </div>
                <div class="card-content">
                    <h3>Emergency Storm Repair</h3>
                    <p>
                        Fast temporary and permanent repairs to roofs,
                        exteriors, and interiors after severe weather.
                    </p>
                    <a href="/contact" class="card-cta">Get Emergency Repairs</a
                    >
                </div>
            </div>
        </div>
    </section>

    <!-- Steps -->
    <section class="steps-section">
        <h2 class="steps-title">How It Works</h2>
        <div class="steps-container">
            <div class="step-item" data-step="1">
                <div class="step-icon"><i class="fas fa-phone-alt"></i></div>
                <h3>Emergency Call</h3>
                <p>Damage assessment & safety check</p>
            </div>

            <div class="step-item" data-step="2">
                <div class="step-icon"><i class="fas fa-shield-alt"></i></div>
                <h3>Secure & Mitigate</h3>
                <p>Roof tarps, board-up & water stop</p>
            </div>

            <div class="step-item" data-step="3">
                <div class="step-icon"><i class="fas fa-broom"></i></div>
                <h3>Clean & Remove</h3>
                <p>Debris removal & drying as needed</p>
            </div>

            <div class="step-item" data-step="4">
                <div class="step-icon"><i class="fas fa-tools"></i></div>
                <h3>Repair & Restore</h3>
                <p>Exterior/interior repairs & finishes</p>
            </div>
        </div>
    </section>

    <!-- Blog / Guides -->
    <section class="sectionBlogBathroom">
        <div>
            <div>
                <h2 class="tittleSection-cardBlogBathroo">
                    Storm Readiness & Recovery Guides
                </h2>
            </div>
            <div>
                <div class="cntFather-cardBlogBathroo">
                    <div class="cnt-cardBlogBathroom">
                        <h3 class="title-cardBlogBathroom">
                            Hurricane Prep Checklist
                        </h3>
                        <p class="text-cardBlogBathroom">
                            How to secure your roof, windows, and yard before
                            the storm.
                        </p>
                        <a class="link-blogBathroom"
                            >Read More <i class="flechaBlog fas fa-arrow-right"
                            ></i></a
                        >
                    </div>
                    <div class="cnt-cardBlogBathroom">
                        <h3 class="title-cardBlogBathroom">
                            Filing a Storm Damage Claim
                        </h3>
                        <p class="text-cardBlogBathroom">
                            Photos to take, what to document, and how we can
                            help.
                        </p>
                        <a class="link-blogBathroom"
                            >Read More <i class="flechaBlog fas fa-arrow-right"
                            ></i></a
                        >
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ -->
    <section>
        <FAQ client:load category="storm" title="Storm Damage FAQs" />
    </section>
</BaseLayout>
