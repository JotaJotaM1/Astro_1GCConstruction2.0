---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <a href="/">
          <img
            class="LogoFooter"
            src="/images/LogoPrin.png"
            alt="Company Logo"
          />
        </a>
      </div>

      <div class="footer-section">
        <h4>Quick Links</h4>
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/servicios">Services</a></li>
          <li><a href="/portfolio">Portfolio</a></li>
          <li><a href="/blog">Resources</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>Services</h4>
        <ul class="footer-links">
          <li><a href="/services/kitchen-remodeling">Kitchen</a></li>
          <li><a href="/services/bathroom-remodeling">Bathroom</a></li>
          <li><a href="/services/home-additions">Home Additions</a></li>
          <li><a href="/services/living-dining">Living & Dining</a></li>
          <li><a href="/services/bedroom-remodeling">Bedroom</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>Contact</h4>
        <div class="contact-info">
          <p>
            <strong>Email:</strong>
            <a href="mailto:info@mywebsite.com">info@mywebsite.com</a>
          </p>
          <p>
            <strong>Phone:</strong>
            <a href="tel:+1234567890">+123 456 7890</a>
          </p>
          <p>
            <strong>Address:</strong>
            <span>123 Main Street, City</span>
          </p>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} My Website. All rights reserved.</p>
      <div class="footer-bottom-links">
        <a href="/privacy">Privacy Policy</a>
        <a href="/terms">Terms of Use</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--bg-dark);
    color: white;
    padding: var(--spacing-16) 0 var(--spacing-8);
    margin-top: auto;
  }
  .LogoFooter {
    height: 100px;
    width: 130px;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-8);
    margin-bottom: var(--spacing-12);
  }

  .footer-section img {
    color: var(--color-primary);
    margin-bottom: var(--spacing-4);
  }

  .footer-section h4 {
    color: white;
    margin-bottom: var(--spacing-4);
    font-size: var(--font-size-lg);
  }

  .social-links {
    display: flex;
    gap: var(--spacing-4);
    margin-top: var(--spacing-4);
  }

  .social-links a {
    color: #cbd5e1;
    transition: color 0.2s ease;
  }

  .social-links a:hover {
    color: var(--color-primary);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: var(--spacing-2);
  }

  .footer-links a {
    color: #cbd5e1;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--color-accent);
  }

  .contact-info p {
    margin-bottom: var(--spacing-3);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1);
  }

  .contact-info strong {
    color: white;
  }

  .contact-info a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .contact-info a:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .footer-bottom {
    border-top: 1px solid var(--color-primary);
    padding-top: var(--spacing-6);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-4);
  }

  .footer-bottom p {
    color: #94a3b8;
    margin: 0;
  }

  .footer-bottom-links {
    display: flex;
    gap: var(--spacing-6);
  }

  .footer-bottom-links a {
    color: #94a3b8;
    text-decoration: none;
    font-size: var(--font-size-sm);
  }

  .footer-bottom-links a:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-6);
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }

    .contact-info p {
      flex-direction: row;
      gap: var(--spacing-2);
    }
  }
</style>
